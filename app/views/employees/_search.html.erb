<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with url: employees_path, method: :get, class: 'search-form' do |f| %>
      <div class="row mb-2">
        <%= f.label :name, 'Name contains', class: 'col-sm-2 col-form-label text-end' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', value: params[:name] %>
        </div>
      </div>

      <%#= f.submit 'Filter', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>