<div class="card shadow-sm mt-4">
  <div class="card-header">
    <h4 class="mb-0">Personal data</h4>
  </div>
  <div class="card-body">
    <%= form_for(:employee, form_option_builder(employee)) do |f| %>

      <% if employee.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(employee.errors.count, "error") %> prohibited this contract from being saved:</h2>

          <ul class="mb-0">
            <% employee.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= hidden_field_tag :validity, params[:validity] %>

      <div class="row mb-2">
        <%= f.label :first_name, class: 'col-sm-2 col-form-label text-end' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>

      <div class="row mb-2">
        <%= f.label :last_name, class: 'col-sm-2 col-form-label text-end' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <div class="row mb-2">
        <%= f.label :birthday, class: 'col-sm-2 col-form-label text-end' %>
        <div class="col-sm-10">
          <%= f.date_field :birthday, class: 'form-control' %>
        </div>
      </div>

      <div class="row mb-2">
        <%= f.label :address, class: 'col-sm-2 col-form-label text-end' %>
        <div class="col-sm-10">
          <%= f.text_area :address, class: 'form-control' %>
        </div>
      </div>

      <div class="d-grid mt-4">
        <%= f.submit 'Submit', class: 'btn btn-lg btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
